<% layout("/layouts/boilerplate") %>

    <body>


        <div class="row mt-1">
            <h2 class="col-6 offset-3">SignUp on Wanderlust</h2>
            <div class=" col-6 offset-3">
                <form action="/signup" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input name="username" type="text" class="form-control" rows="2" id="username" cols="30"
                            placeholder="enter username" rows="5" required />
                        <div class="valid-feedback">looks good!</div>
                        <div class="invalid-feedback">Please Enter Username</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input name="email" type="email" class="form-control" rows="2" id="email" cols="30"
                            placeholder="enter email" rows="5" required />
                        <div class="valid-feedback">looks good!</div>
                        <div class="invalid-feedback">Please Enter Email</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" rows="2" id="password" cols="30"
                            placeholder="enter password" rows="5" required />
                        <div class="valid-feedback">looks good!</div>
                        <div class="invalid-feedback">Please Enter Password</div>
                    </div>
                    <button class="btn btn-success">SignUP</button>
                </form>
            </div>
        </div>
    </body>