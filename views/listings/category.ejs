<% layout("layouts/boilerplate.ejs") %>

<link rel="stylesheet" href="/css/category.css">

  <body>
    <div id="filters">
     
      <div class="filter">
        <a href="/listings/category/Trending"><div ><i class="fa-solid fa-fire "></i></div>
          <p>Trending</p></a>
        
      </div>
      <div class="filter">
        <a href="/listings/category/Beach"> <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beach</p></a>
       
      </div>
      <div class="filter">
        <a href="/listings/category/Forest"> <div><i class="fa-solid fa-tree"></i></div>
          <p>Forest</p></a>
       
      </div>
      <div class="filter">
        <a href="/listings/category/Mountain"><div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p></a>
      </div>
      <div class="filter">
        <a href="/listings/category/Lake">  <div><i class="fa-solid fa-water"></i></div>
          <p>Lake</p></a>
      
      </div>
      <div class="filter">
        <a href="/listings/category/Castles"> <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p></a>
       
      </div>
      <div class="filter">
        <a href="/listings/category/City"><div><i class="fa-solid fa-city"></i></div>
          <p>City</p></a>
        
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch ">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
        
      </div>
      
    </div>
<hr class="mt-0">
    <div class="row  ">
      <% for(let listing of allListings){%>
          <% if(type==listing.category){%>
        <div class="card listing-card  mb-3" style="width: 20rem; ">
          <a href="/listings/<%=listing._id %>" class="listing-link">
            <img src="<%=listing.image.url %>" class="card-img-top  " alt="..." style="height: 15rem;">
            <div class="card-img-overlay">&#10084</div>
            <div class="card-body " style="padding-top: 0.3rem; ">
              <p class="card-text ">
                <span>
                  <%=listing.title %>
                </span>
                <br>
                &#x20b9; <%= listing.price.toLocaleString("en-IN") %>/night
                  <i class="tax-info"> +18% GST</i>
              </p>



            </div>
          </a>
        </div>
    <% } %>
        <%}%>
    </div>
    <script src="/js/category.js"></script>
  </body>